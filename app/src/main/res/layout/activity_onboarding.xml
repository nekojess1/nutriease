<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <me.relex.circleindicator.CircleIndicator3
        android:id="@+id/onboarding_circle_indicator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_48"
        android:layout_alignParentBottom="true"
        app:ci_drawable="@drawable/indicator_circle_selected"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/onboarding_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/onboarding_circle_indicator"
        android:layout_centerInParent="true" />
</RelativeLayout>