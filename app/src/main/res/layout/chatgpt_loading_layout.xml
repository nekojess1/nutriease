<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/d_24"
    android:gravity="center">

    <ImageView
        android:id="@+id/chatgpt_logo"
        android:layout_width="@dimen/d_80"
        android:layout_height="@dimen/d_80"
        android:src="@drawable/chatgpt_logo"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:max="100"
        android:minWidth="200dp"
        android:minHeight="50dp"
        android:progress="1"/>

    <TextView
        android:id="@+id/textView"
        style="@style/title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gerando receitas atraves do Chat GPT" />

</LinearLayout>