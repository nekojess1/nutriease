<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_page_title"
        style="@style/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/d_24"
        android:layout_marginTop="@dimen/d_64"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_page_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/d_24"
        android:importantForAccessibility="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/item_page_description"
        app:layout_constraintTop_toBottomOf="@+id/item_page_title" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/item_page_button"
        style="@style/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginHorizontal="@dimen/d_24"
        android:layout_marginBottom="@dimen/d_64"
        android:text="@string/onboarding_third_frame_button"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/item_page_description"
        style="@style/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/d_48"
        android:layout_marginTop="@dimen/d_48"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/item_page_button"
        app:layout_constraintTop_toBottomOf="@+id/item_page_image" />

</androidx.constraintlayout.widget.ConstraintLayout>
