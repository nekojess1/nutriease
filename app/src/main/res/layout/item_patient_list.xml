<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:id="@+id/adapter_patient_list_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/d_16"
    android:layout_marginHorizontal="@dimen/d_24"
    android:layout_marginVertical="@dimen/d_16">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/d_16">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/adapter_patient_list_image"
            android:layout_width="@dimen/d_64"
            android:layout_height="@dimen/d_64"
            android:src="@drawable/user_image_default"
            app:civ_border_color="@color/blue_app"
            app:civ_border_width="@dimen/d_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="@dimen/d_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d_24"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/adapter_patient_list_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/adapter_patient_list_image"
            app:layout_constraintTop_toTopOf="@+id/adapter_patient_list_image">

            <TextView
                android:id="@+id/adapter_patient_list_name"
                style="@style/description2_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                tools:text="JÃ©ssica" />

            <TextView
                android:id="@+id/adapter_patient_list_locality"
                style="@style/description2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                tools:text="Recife - Pernambuco" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>