<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="title">
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black_70</item>
        <item name="android:textSize">@dimen/dt_32</item>
    </style>

    <style name="title2">
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black_70</item>
        <item name="android:textSize">@dimen/dt_24</item>
    </style>

    <style name="title2_without_bold">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black_70</item>
        <item name="android:textSize">@dimen/dt_24</item>
    </style>

    <style name="title3">
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black_50</item>
        <item name="android:textSize">@dimen/dt_20</item>
    </style>

    <style name="description">
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black_50</item>
        <item name="android:textSize">@dimen/dt_14</item>
    </style>

    <style name="description_password">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black_50</item>
        <item name="android:textSize">@dimen/dt_14</item>
    </style>

    <style name="description2">
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black_50</item>
        <item name="android:textSize">@dimen/dt_16</item>
    </style>

    <style name="menuItem">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black_50</item>
        <item name="android:textSize">@dimen/dt_16</item>
    </style>

    <style name="buttonText">
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/pink_app</item>
        <item name="android:textSize">@dimen/dt_16</item>
    </style>

    <style name="TextButton">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/dt_16</item>
        <item name="android:textColor">@color/black_50</item>
    </style>

    <style name="button">
        <item name="android:padding">@dimen/d_16</item>
        <item name="cornerRadius">@dimen/d_8</item>
    </style>

    <style name="buttonOutline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:padding">@dimen/d_16</item>
        <item name="cornerRadius">@dimen/d_8</item>
        <item name="android:textAppearance">@style/description2</item>
        <item name="strokeColor">@color/gray_50</item>
    </style>

    <style name="buttonSmall">
        <item name="android:padding">@dimen/d_8</item>
        <item name="cornerRadius">@dimen/d_8</item>
    </style>

    <style name="StrengthBarStyle" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/bg_strength_bar</item>
        <item name="android:indeterminateDrawable">@null</item>
        <item name="android:minHeight">8dp</item>
        <item name="android:maxHeight">8dp</item>
    </style>

</resources>
